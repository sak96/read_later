{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Read Later",
  "version": "0.1.0",
  "identifier": "io.github.sak.read.it.later",
  "build": {
    "frontendDist": ".",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Read Later",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
