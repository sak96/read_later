{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Read Later",
  "version": "0.1.0",
  "identifier": "io.github.sak.read.it.later",
  "build": {
    "removeUnusedCommands": true,
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "cd frontend && trunk serve",
    "beforeBuildCommand": "cd frontend && trunk build --release"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Read Later",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:article_manager.db"
      ]
    }
  }
}
